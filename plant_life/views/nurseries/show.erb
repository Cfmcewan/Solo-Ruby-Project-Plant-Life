<div class='container' id="home-container">
  <h1 id='title'>Plant Life</h1>

<div class="container">

  <h2>Plants available at <%= @nursery.name %> in <%=@nursery.location%>:</h2>
<p><a class="button" href="/nurseries/<%= @nursery.id %>/edit">Edit Nursery</a></p>
<form action="/nurseries/<%=@nursery.id%>/delete" method="POST">
        <input type="submit" value="Delete Nursery">
        <br>
        <hr>
      </form>
  <div class="row">
    <div class="plant-info">

    </div>
  </div>


  <div class="plants">

    <% for plant in @plants %>
    <div class="plant-info">


      <p><a class="name" href="/plants/<%= plant.id %>"> <%= plant.name %></a></p>
      <a class="name" href="/plants/<%= plant.id %>">
      <img class="plant_logo" src="/images/<%= plant.name.downcase%>.jpg" alt="<%= plant.name.downcase%>">
    </a>

      <hr />
    </div>

    <% end %>

  </div>
</div>
